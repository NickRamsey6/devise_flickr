<h1>Flicks</h1>

<% if @flicks.any? %>
  <ul>
    <% @flicks.each do |flick| %>
      <% if flick.user_id == current_user.id %>
        <li><%= link_to flick.caption, user_flick_path(current_user, flick) %></li>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p>There are no flicks yet.</p>
<% end %>

<p><%= link_to "Create new flicks", new_user_flick_path(current_user, @flick) %></p>
